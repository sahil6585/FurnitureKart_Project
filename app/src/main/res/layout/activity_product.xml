        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"/>
    </LinearLayout>
</LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>