<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="#D8D8DA">
                <ImageView
                    android:id="@+id/pimage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/images"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/pbrand"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="BRAND"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/jostbold"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="product Information"
                    android:layout_margin="5dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">
                    <nl.dionsegijn.steppertouch.StepperTouch
                        android:id="@+id/stepperTouch"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="7dp"
                        app:stepperTextColor="@color/black"
                        app:stepperTextSize="5dp"
                        app:stepperBackgroundColor="@color/gray"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="â‚¹"
                        android:fontFamily="@font/jostregular"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/pprice"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="300"
                        android:textStyle="bold"
                        android:fontFamily="@font/jostbold"
                        android:textSize="25sp"
                        android:layout_marginTop="3dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/removecart"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_weight="1"
                    android:textAllCaps="false"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buy"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:layout_weight="1"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>

</LinearLayout>